<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="create_income_table" author="kornelijus.semenas">
        <createTable tableName="income">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="date" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="currency">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="expected_day" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="is_got" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="index" type="integer" autoIncrement="true">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>